<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.MeetEazy" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/cornflower_blue</item>
        <item name="colorPrimaryVariant">@color/royal_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/dodger_blue</item>
        <item name="colorSecondaryVariant">@color/mariner</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_grey_0_overlay</item>

        <!-- Highlight control color -->
        <item name="android:colorControlHighlight">@color/ripple_cornflower_blue</item>

    </style>

</resources>
