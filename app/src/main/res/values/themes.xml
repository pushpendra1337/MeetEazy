<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.MeetEazy" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/cornflower_blue</item>
        <item name="colorPrimaryVariant">@color/royal_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/dodger_blue</item>
        <item name="colorSecondaryVariant">@color/mariner</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Highlight control color -->
        <item name="android:colorControlHighlight">@color/ripple_cornflower_blue</item>

    </style>

    <!-- Helper text style -->
    <style name="StyleHelperText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Error text style -->
    <style name="StyleErrorText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Toolbar title style -->
    <style name="StyleToolbarTitle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

</resources>