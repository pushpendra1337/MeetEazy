<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_onboarding_slider_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/onboarding_slider_image_height"
        android:contentDescription="@null"
        android:paddingHorizontal="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_medium"
        android:src="@drawable/img_video_meeting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView_onboarding_slider_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_medium"
        android:layout_marginTop="@dimen/margin_16dp"
        android:textAlignment="center"
        android:includeFontPadding="false"
        android:text="@string/onboarding_heading_first_slide"
        android:textColor="@color/colorHighEmphasisText"
        android:textSize="@dimen/text_size_huge"
        app:fontFamily="@font/poppins_semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_onboarding_slider_image" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView_slider_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:paddingHorizontal="@dimen/padding_medium"
        android:gravity="center"
        android:text="@string/onboarding_description_first_slide"
        android:textColor="@color/colorMediumEmphasisText"
        android:textSize="@dimen/text_size_medium"
        android:textAlignment="center"
        android:includeFontPadding="false"
        app:fontFamily="@font/poppins_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_onboarding_slider_heading" />

</androidx.constraintlayout.widget.ConstraintLayout>