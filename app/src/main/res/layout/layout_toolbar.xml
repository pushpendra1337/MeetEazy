<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:layout_marginHorizontal="@dimen/margin_16dp"
    android:layout_marginTop="@dimen/margin_16dp"
    android:background="@drawable/selector_item_ripple_toolbar"
    android:elevation="@dimen/toolbar_elevation"
    app:contentInsetStartWithNavigation="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_scrollFlags="scroll|enterAlways"
    app:menu="@menu/menu_toolbar"
    app:navigationContentDescription="@string/navigation_content_description_search"
    app:navigationIcon="@drawable/ic_baseline_search_24"
    app:navigationIconTint="@color/colorIconography"
    app:title="@string/toolbar_title_search"
    app:titleTextAppearance="@style/StyleToolbarTitle"
    app:titleTextColor="@color/colorMediumEmphasisText" />